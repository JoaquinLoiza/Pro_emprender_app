<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductsActivity">

    <ListView
        android:id="@+id/dinamic_products"
        android:layout_width="290dp"
        android:layout_height="432dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_newProduct"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/btn_newProduct"
        app:layout_constraintTop_toTopOf="parent">
    </ListView>

    <Button
        android:id="@+id/btn_newProduct"
        android:layout_width="293dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:width="300dp"
        android:text="@string/newProduct"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dinamic_products" />

</androidx.constraintlayout.widget.ConstraintLayout>